<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projudah.cookhelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Transparent" >
        >
        <activity
            android:name="com.example.projudah.cookhelper.Home"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.example.projudah.cookhelper.Launch"
            android:label="Cookhelper" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.projudah.cookhelper.Add"
            android:label="@string/title_activity_add"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.example.projudah.cookhelper.Viewrecipe"
            android:label="@string/title_activity_viewrecipe" />
        <activity
            android:name="com.example.projudah.cookhelper.Edit"
            android:label="@string/title_activity_edit"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.example.projudah.cookhelper.Ingredients"
            android:label="@string/title_activity_ingredients" />
    </application>

</manifest>